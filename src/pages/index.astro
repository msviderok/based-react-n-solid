---
import Layout from '../layouts/Layout.astro';
import ReactAccordion from '../components/react/accordion/demos/hero/css-modules';
import SolidAccordion from '../components/solid/accordion/demos/hero/css-modules';
---

<Layout>
	<div class="container mx-auto px-4 py-8">
		<h1 class="text-3xl font-bold mb-8 text-center">Accordion Comparison</h1>
		<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
			<div>
				<h2 class="text-2xl font-semibold mb-4 text-center">Solid</h2>
				<div class="flex justify-center">
					<SolidAccordion client:only="solid-js" />
				</div>
			</div>
			<div>
				<h2 class="text-2xl font-semibold mb-4 text-center">React</h2>
				<div class="flex justify-center">
					<ReactAccordion client:only="react" />
				</div>
			</div>
		</div>
	</div>
</Layout>
